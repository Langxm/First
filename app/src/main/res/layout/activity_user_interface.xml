<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InfoActivity">



    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="65dp"
        android:background="@drawable/backgr"
        android:layout_above="@id/tab_menu"
        android:layout_marginBottom="2dp" />


    <LinearLayout
        android:id="@+id/tab_menu"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView

            android:id="@+id/txt_zx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_course"
            android:text="高数"/>

        <TextView
            android:id="@+id/btn_xt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/information"
            android:drawablePadding="3dp"
            android:gravity="center"
            android:drawableTop="@mipmap/ic_exercise_bg_1"
            android:text="英语单词"/>



        <TextView
            android:id="@+id/btn_kc"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:drawablePadding="3dp"

            android:gravity="center"
            android:drawableTop="@mipmap/ic_message"
            android:text="资讯"/>

        <TextView
            android:id="@+id/txt_mine"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
             android:drawableTop="@mipmap/ic_exercise"
            android:drawablePadding="3dp"


            android:gravity="center"



            android:text="我的"/>

    </LinearLayout>


</RelativeLayout>